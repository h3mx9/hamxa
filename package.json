{
  "name": "employee-dashboard",
  "version": "1.0.0",
  "description": "Employee Dashboard with real-time tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "health-check": "node -e \"require('node-fetch')(process.env.HEALTH_URL || 'http://localhost:3000/health').then(r => r.json()).then(d => console.log(JSON.stringify(d, null, 2))).catch(e => console.error('Health check failed:', e))\"",
    "deploy": "railway up",
    "logs": "railway logs"
  },
  "keywords": [
    "employee",
    "dashboard",
    "tracking",
    "realtime"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "ws": "^8.13.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.6.12",
    "dotenv": "^16.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/employee-dashboard.git"
  }
}
